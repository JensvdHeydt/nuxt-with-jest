{
  "name": "dynamic-components-nuxt-with-jest",
  "version": "1.0.0",
  "dependencies": {
    "nuxt": "latest"
  },
  "license": "MIT",
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    }
  },
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^20.0.4",
    "avoriaz": "^2.4.3",
    "chai": "^4.1.0",
    "jest-vue-preprocessor": "^1.0.1"
  }
}
